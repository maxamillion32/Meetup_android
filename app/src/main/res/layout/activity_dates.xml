<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="60dp">

        <Button
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:text="Begins on"
            android:id="@+id/button_startDate"
            android:textColor="#ffffff"
            android:background="#E62F3030"/>


        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:text="Begins at"
            android:id="@+id/button_startTime"
            android:textColor="#ffffff"
            android:background="#E62F3030"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:text="Ends on"
            android:id="@+id/button_endDate"
            android:textColor="#ffffff"
            android:background="#E62F3030"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:text="Ends at"
            android:id="@+id/button_endTime"
            android:textColor="#ffffff"
            android:background="#E62F3030"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_startDate"
            android:layout_gravity="center_horizontal"
            android:text="From" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_startTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" - "
            android:id="@+id/date_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_endDate"
            android:layout_gravity="center_horizontal"
            android:text="To" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_endTime"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <Button
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:text="Done"
        android:id="@+id/done_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="#E62F3030"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/infoSTR"
        android:id="@+id/datepicker_info"
        android:layout_marginTop="20dp"
        android:gravity="center" />
</LinearLayout>